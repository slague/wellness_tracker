<%= form_for([current_user, @goal]) do |f| %>

<div class="form">

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :total_goal_count %>
    <%= f.number_field :total_goal_count, min: 1, max: 7 %>
  </div>

  <% if @goal.new_record? %>
    <div class="field">
      <%= f.label :category_id %>
      <%= f.collection_select :category_id, Category.all, :id, :name, :required => true, :include_blank => "Select a Category" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit class: 'btn btn-custom'%>
  </div>
<% end %>
</div>
