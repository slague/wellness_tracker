<h3>This Week's Turing Community Totals</h3>
<h5><%=current_week.format_start_date%>-<%=current_week.format_end_date%></h5>
<hr>

<%@categories.each do |category| %>
  <div class="goal_<%= category.name %>">
    <div class='goal-title-icon'>
      <img class='icons' src= "<%= category.image_path%>"> &nbsp;
      <h3><%= category.name %></h3>
    </div>
    <div class="progress">
      <% if category.get_community_total_count(current_week.id) %>
        <div id="cat-<%=category.id%>", class="progress-bar" role="progressbar" style="width: <%=((category.get_community_progress(current_week.id) / category.get_community_total_count(current_week.id).to_f) * 100).round%>%;"
          aria-valuenow="<%= ((category.get_community_progress(current_week.id) / category.get_community_total_count(current_week.id).to_f) * 100).round%>" aria-valuemin="0" aria-valuemax="100">
        </div>
      <% else %>
        <div class="progress-bar" role="progressbar" style="0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
      <% end %>
    </div>
    <%= category.get_community_progress(current_week.id) %> / <%= category.get_community_total_count(current_week.id) %><hr>
  <% end %>
</div>
