<p id="notice"><%= notice %></p>

<h1>Goals</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Progress count</th>
      <th>Total goal count</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.description %></td>
        <td><%= goal.progress_count %></td>
        <td><%= goal.total_goal_count %></td>
        <td><%= goal.category.name %></td>
        <% unless (goal.total_goal_count == goal.progress_count) %>
          <td><%= button_to 'Increment Goal Progress!', inc_user_goal_path(@user, goal), method: :put %></td>
        <% end %>
        <td><%= link_to 'Edit', edit_user_goal_path(@user, goal) %></td>
        <td><%= link_to 'Delete', user_goal_path(@user, goal), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Goal', new_user_goal_path(@user) %>
